<Window x:Class="GlobalSolutionAdmin.Views.LogoutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GlobalSolutionAdmin.Views"
        mc:Ignorable="d"
           Title="Logout" Height="200" Width="400">
    <Grid>

        <StackPanel>
            <TextBlock Text="Are you sure you want to logout?" FontSize="14" Margin="20,20,0,0" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10,0,10">
                <Button Width="100" Height="20" Background="White" Foreground="Red" Content="Logout" BorderBrush="Red" Margin="5"/>
                <Button Width="100" Height="20" Background="White" Foreground="Blue" Content="Cancel" BorderBrush="Blue" Margin="5"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
