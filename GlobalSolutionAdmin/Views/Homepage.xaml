<Page xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"  x:Class="GlobalSolutionAdmin.Views.Homepage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GlobalSolutionAdmin.Views"
      xmlns:control="clr-namespace:GlobalSolutionAdmin.Views.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="750"
      Title="Homepage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <GridSplitter Grid.Column="0" Width="2" />

        <control:Sidebar/>


        <StackPanel Orientation="Vertical" Margin="10" Grid.Column="1">
            <TextBlock Text="Main Panel" FontFamily="Fonts\Poppins-Bold.ttf" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal">
                <local:DashboardCard Margin="30,30,30,0"/>
                <local:DashboardCard Margin="30,30,30,0"/>
                <local:DashboardCard Margin="30,30,30,0"/>
                

            </StackPanel>
          
        </StackPanel>
    </Grid>
    
</Page>
