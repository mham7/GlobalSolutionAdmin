<UserControl x:Class="GlobalSolutionAdmin.Views.UserControls.Sidebar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GlobalSolutionAdmin.Views.UserControls"
             xmlns:resource="clr-namespace:GlobalSolutionAdmin.Views"
             mc:Ignorable="d" 
             >
    <Grid>
        <StackPanel Orientation="Vertical" Margin="80" Grid.Column="0">


            <Image Source="/Views/Resources/dshbrd.png"
            Style="{StaticResource ImageStyle}" MouseLeftButtonDown="NavigateToHome"/>
            <Image Source="/Views/Resources/user.png"
            Style="{StaticResource ImageStyle}" MouseLeftButtonDown="NavigateToClient"/>
            <Image Source="/Views/Resources/building.png"
                   Style="{StaticResource ImageStyle}" MouseLeftButtonDown="NavigateToSite"/>
            <Image Source="/Views/Resources/logout.png"
                   Style="{StaticResource ImageStyle}" MouseLeftButtonDown="LogoutPopup"/>


        </StackPanel>
    </Grid>
</UserControl>
