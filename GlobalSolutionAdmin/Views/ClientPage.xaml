      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GlobalSolutionAdmin.Views"
      xmlns:control="clr-namespace:GlobalSolutionAdmin.Views.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="800"
      Title="ClientPage">

    
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <GridSplitter Grid.Column="0"  Width="2" />

            <Grid Grid.Column="0" >
            </Grid>

            <Grid Grid.Column="1">
            </Grid>

         <control:Sidebar/>

            <StackPanel Orientation="Vertical" Margin="10" Grid.Column="1">
                <TextBlock Text="Client Data" FontFamily="Fonts\Poppins-Bold.ttf" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                <StackPanel Orientation="Vertical">


                </StackPanel>
            <Button Content="Add Client" Width="100" Height="30" Background="White" BorderBrush="#50C878"
        BorderThickness="1" FontFamily="Fonts\Poppins-Bold.ttf" Foreground="#50C878" HorizontalAlignment="Right" Margin="0,0,20,0" Click="AddUserEvent"  />
                <local:UserControl1  Margin="30,30,30,0"/>
            </StackPanel>
        </Grid>
    
</Page>
